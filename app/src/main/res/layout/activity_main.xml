<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/middleGrey"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text="0"
        android:textSize="62sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="371dp"
        android:layout_height="497dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow>

            <Button
                android:id="@+id/btnNegative"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_margin="@dimen/button_margin"
                android:background="@drawable/round_button_selector"
                android:text="(-)"
                android:textColor="@color/darkGrey"
                android:textSize="@dimen/text_size"
                app:backgroundTint="@color/lightGrey" />

            <Button
                android:id="@+id/btnSquare"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_margin="@dimen/button_margin"
                android:background="@drawable/round_button_selector"
                android:text="x²"
                android:textColor="@color/darkGrey"
                android:textSize="@dimen/text_size"
                app:backgroundTint="@color/lightGrey" />



            <Button
                android:id="@+id/btnRadical"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_margin="@dimen/button_margin"
                android:background="@drawable/round_button_selector"
                android:text="√"
                android:textColor="@color/darkGrey"
                android:textSize="@dimen/text_size"
                app:backgroundTint="@color/lightGrey" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_margin="@dimen/button_margin"
                android:background="@drawable/round_button_selector"
                android:text="÷"
                android:textColor="@color/darkGrey"
                android:textSize="@dimen/text_size"
                app:backgroundTint="@color/lightGrey" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_margin="@dimen/button_margin"
                android:background="@drawable/round_button_selector"
                android:text="7"
                android:textSize="@dimen/text_size"
                app:backgroundTint="@color/darkGrey" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_margin="@dimen/button_margin"
                android:background="@drawable/round_button_selector"
                android:text="8"
                android:textSize="@dimen/text_size"
                app:backgroundTint="@color/darkGrey" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_margin="@dimen/button_margin"
                android:background="@drawable/round_button_selector"
                android:text="9"
                android:textSize="@dimen/text_size"
                app:backgroundTint="@color/darkGrey" />

            <Button
                android:id="@+id/btnMultiplikation"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_margin="@dimen/button_margin"
                android:background="@drawable/round_button_selector"
                android:text="x"
                android:textColor="@color/darkGrey"
                android:textSize="@dimen/text_size"
                app:backgroundTint="@color/lightGrey" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_margin="@dimen/button_margin"
                android:background="@drawable/round_button_selector"
                android:text="4"
                android:textSize="@dimen/text_size"
                app:backgroundTint="@color/darkGrey" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_margin="@dimen/button_margin"
                android:background="@drawable/round_button_selector"
                android:text="5"
                android:textSize="@dimen/text_size"
                app:backgroundTint="@color/darkGrey" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_margin="@dimen/button_margin"
                android:background="@drawable/round_button_selector"
                android:text="6"
                android:textSize="@dimen/text_size"
                app:backgroundTint="@color/darkGrey" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_margin="@dimen/button_margin"
                android:background="@drawable/round_button_selector"
                android:text="-"
                android:textColor="@color/darkGrey"
                android:textSize="@dimen/text_size"
                app:backgroundTint="@color/lightGrey" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="67dp">

            <Button
                android:id="@+id/btn1"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_margin="@dimen/button_margin"
                android:background="@drawable/round_button_selector"
                android:text="1"
                android:textSize="@dimen/text_size"
                app:backgroundTint="@color/darkGrey" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_margin="@dimen/button_margin"
                android:background="@drawable/round_button_selector"
                android:text="2"
                android:textSize="@dimen/text_size"
                app:backgroundTint="@color/darkGrey" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_margin="@dimen/button_margin"
                android:background="@drawable/round_button_selector"
                android:text="3"
                android:textSize="@dimen/text_size"
                app:backgroundTint="@color/darkGrey" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_margin="@dimen/button_margin"
                android:background="@drawable/round_button_selector"
                android:text="+"
                android:textColor="@color/darkGrey"
                android:textSize="@dimen/text_size"
                app:backgroundTint="@color/lightGrey" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn0"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_margin="@dimen/button_margin"
                android:background="@drawable/round_button_selector"
                android:text="0"
                android:textSize="@dimen/text_size"
                app:backgroundTint="@color/darkGrey" />



            <Button
                android:id="@+id/btnC"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_margin="@dimen/button_margin"
                android:background="@drawable/round_button_selector"
                android:text="C"
                android:textColor="@color/darkGrey"
                android:textSize="@dimen/text_size"
                app:backgroundTint="@color/lightGrey" />

            <Button
                android:id="@+id/btnCE"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_margin="@dimen/button_margin"
                android:background="@drawable/round_button_selector"
                android:text="CE"
                android:textColor="@color/darkGrey"
                android:textSize="@dimen/text_size"
                app:backgroundTint="@color/lightGrey" />


            <Button
                android:id="@+id/btnEnter"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_margin="@dimen/button_margin"
                android:background="@drawable/round_button_selector"
                android:text="="
                android:textSize="@dimen/text_size"
                app:backgroundTint="@color/red" />


        </TableRow>


    </TableLayout>

    <TextView
        android:id="@+id/tvCurrentCalculation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:textSize="28dp"
        app:layout_constraintBottom_toTopOf="@+id/tvResult"
        app:layout_constraintEnd_toEndOf="@+id/tvResult" />

</androidx.constraintlayout.widget.ConstraintLayout>